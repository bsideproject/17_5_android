<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_car_pick_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_pick_recommend"
        android:textColor="@color/color_3872ff"
        android:fontFamily="@font/pretendard_semibold"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@id/title_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_pick_recommend_title"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="24dp"
        android:textColor="@color/color_21212f"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_car_pick_recommend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:src="@drawable/car_motion"
        app:layout_constraintDimensionRatio="363:242"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_start_test"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:text="@string/start_test"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        app:layout_constraintDimensionRatio="200:52"
        android:background="@drawable/bg_round_21212ff"
        app:layout_constraintTop_toBottomOf="@id/video_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>