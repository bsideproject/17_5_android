<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CarPickApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarpickApp"
        tools:targetApi="31">
        <activity
            android:name=".screen.CarDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_car_detail"
            android:theme="@style/Theme.CarpickApp" />
        <activity
            android:name=".screen.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Activity.CarpickApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.DetailSpecActivity"
            android:exported="false"
            android:label="@string/title_activity_detail_spec"
            android:theme="@style/Theme.CarpickApp" />
        <activity
            android:name=".screen.WishListActivity"
            android:exported="false"
            android:label="@string/title_activity_wish_list"
            android:theme="@style/Theme.CarpickApp" />
        <activity
            android:name=".screen.TestResultActivity"
            android:exported="false"
            android:label="@string/title_activity_test_result"
            android:theme="@style/Theme.CarpickApp" />
        <activity
            android:name=".screen.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Activity.CarpickApp">

        </activity>
        <activity
            android:name=".screen.activity.LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.Activity.CarpickApp" />
        <activity
            android:name=".screen.ComposeTestActivity"
            android:exported="true"
            android:theme="@style/Theme.Activity.CarpickApp" />
    </application>

</manifest>